{
  "name": "vsw",
  "version": "0.0.5",
  "description": "VSCode theme switcher CLI tool",
  "main": "dist/index.js",
  "bin": {
    "vsw": "dist/index.js"
  },
  "author": "Naturalclar (https://github.com/Naturalclar)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Naturalclar/vsw.git"
  },
  "scripts": {
    "build": "tsc",
    "type-check": "tsc -noEmit",
    "lint": "biome check .",
    "format": "biome format --write .",
    "format-check": "biome format --check .",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run lint && pnpm run build",
    "test-contrast": "tsx src/test-contrast.ts"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.15"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.30",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "types": "dist/index.d.ts",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Naturalclar/vsw/issues"
  },
  "homepage": "https://github.com/Naturalclar/vsw#readme"
}
